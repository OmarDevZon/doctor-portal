generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// user model 

enum userRole {
  superAdmin
  admin
  doctor
  patient
}

enum userStatus {
  blocked
  active
}

model User {
  id                 String     @id @default(uuid())
  email              String     @unique
  password           String
  role               userRole
  needPasswordChange Boolean
  status             userStatus
  createdAt          DateTime   @default(now())
  updateAt           DateTime   @updatedAt

  @@map("users")
}

model Admin {
  id                 String     @id @default(uuid())
  name               String
  email              String     @unique
  profile            String?
  contactNumber      String
  role               String     @default("admin")
  needPasswordChange Boolean
  status             userStatus
  createdAt          DateTime   @default(now())
  updateAt           DateTime   @updatedAt

  @@map("admin")
}
